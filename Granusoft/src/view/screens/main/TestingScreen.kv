<TestingInfoBox@Label>:
    font_size: 25
    color: 1,1,1,1
	halign: 'center'
    valign: 'center'
    markup: True
	bold: True
    canvas.before:
        Color:
            rgba: .14,.14,.14,1
        Rectangle:
            pos: self.pos
            size: self.size

<TestingScreen>:
	name: 'testing_screen'
    GranuContainer:
        GranuSideArea:
            GranuSideButton:
                text: 'Update\nNotes'
	    		on_release:
                    root.move_to('note_screen') # Move to notes screen
            GranuSideButton:
                text: "Start"
                on_release:
                    root.move_to('test_in_progress_screen') # Move to test in progress screen
            GranuSideButton:
                text: "Tests"
                on_release:
                    root.move_to('tests_screen') # Move to tests screen
            GranuSideButton:
                text: 'Back'
	    		on_release:
                    root.move_to('main_screen') # Move to main screen
        GranuContent:
            GranuTitle:
                text: 'Testing'
            GridLayout:
                cols: 2
                spacing: 10
                SettingsButton:
                    text: "Height: " + root.height_num + " cm"
                    on_release:
                        root.move_to('height_screen')
                SettingsButton:
                    text: "Operator: " + root.operator
                    on_release:
                        root.move_to('operator_screen')
                SettingsButton:
                    text: "Plot: " + root.plot
                    on_release:
                        root.move_to('plot_screen')
                TestingInfoBox:
                    id: time
                    text: "Time: " + root.time
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: self.minimum_height
                ListTitle:
                    text: 'Pre-test Notes'
                ListTitle:
                    text: 'Post-test Notes'
            BoxLayout:
                orientation: 'horizontal'
                StaticList:
                    id: pretest
                StaticList:
                    id: posttest
