<ROD_MainScreenInfoBox@Label>:
    font_size: 25
	color: 1,1,1,1
	halign: 'center'
	valign: 'center'
	markup: True
	bold: True
    canvas.before:
        Color:
            rgba: .14,.14,.14,1
        Rectangle:
            pos: self.pos
            size: self.size

<ROD_MainScreen>:
    name: 'rod_main_screen'
    GranuContainer:
        GranuSideArea:
            GranuSideButton:
                text: 'Settings'
	    		on_release:
                    root.move_to('rod_settings_screen') # Move to settings screen
            GranuSideButton:
                text: 'Collect Data'
                on_release:
                    root.move_to('rod_test_settings_confirmation') # Moves to test settings confirmation
            GranuSideButton:
                text: 'Live Feed'
                on_release:
                    root.move_to('rod_live_feed_screen') # Move to liveFeed screen
            GranuSideButton:
                text: 'Exit'
                on_release:
                    root.move_to('mode_select') # Move to exit screen
        GranuContent:
            GranuTitle:
                text: 'Rodney Main Menu'
            Label:
                id: device_name
                font_size: 40
                markup: True
            	bold: True
                text: 'Stalk Strength\nDevice 2.3.1'
                halign: 'center'
            Label:
                id: warning_text
                color: (0.8, 0, 0, 1)
                size_hint_max_y: 15
                font_size: 15
            	markup: True
            	bold: True
            GridLayout:
                cols: 2
                spacing: 10
                ROD_MainScreenInfoBox:
                    id: current_date
                    text: 'Date: \n' + root.current_date
                ROD_MainScreenInfoBox:
                    id: load_cell_height
                    text: 'Height: \n' + root.load_cell_height+root.loadCellHeightUnits
                ROD_MainScreenInfoBox:
                    id: location
                    text: 'Location:\n' + root.location
                ROD_MainScreenInfoBox:
                    id: time
                    text: 'Time: \n' + root.time
